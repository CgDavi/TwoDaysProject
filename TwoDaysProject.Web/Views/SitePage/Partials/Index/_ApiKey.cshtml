@model SettingsViewModel
<form action="/SitePage/UpdateApiKey" method="post">
    <div class="row">
        <div class="col-lg-6 mx-auto text-center">
            <label>Api Key</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="ApiKey" value="@Model?.ApiKey" />
                <button class="btn btn-success" type="submit" id="button-addon1">Save Changes</button>
            </div>

        </div>
    </div>
</form>